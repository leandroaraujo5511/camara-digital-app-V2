{
  "name": "vereador-voting-app",
  "main": "index.js",
  "version": "1.0.2",
  "description": "Aplicativo React Native para vereadores votarem nas pautas da Câmara Municipal",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "lint": "expo lint",
    "type-check": "tsc --noEmit",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "build:apk:dev": "eas build --platform android --profile development",
    "build:apk:preview": "eas build --platform android --profile preview",
    "build:apk:staging": "eas build --platform android --profile staging",
    "build:apk:prod": "eas build --platform android --profile production",
    "build:all": "eas build --platform all",
    "update:dev": "eas update --channel development --message",
    "update:preview": "eas update --channel preview --message",
    "update:staging": "eas update --channel staging --message",
    "update:prod": "eas update --channel production --message",
    "update:auto": "eas update --auto"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/native-stack": "^7.0.0",
    "axios": "^1.6.0",
    "date-fns": "^4.1.0",
    "expo": "^54.0.32",
    "expo-font": "~14.0.11",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "~29.0.16",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-toast-message": "^2.2.1",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.6",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.3.3"
  },
  "private": true,
  "keywords": [
    "react-native",
    "expo",
    "camara-municipal",
    "votacao",
    "vereadores",
    "pautas"
  ],
  "author": "Câmara Digital",
  "license": "MIT"
}
